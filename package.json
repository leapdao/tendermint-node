{
  "name": "tendermint-node",
  "version": "3.0.0",
  "description": "Run a Tendermint full node",
  "main": "index.js",
  "bin": {
    "tendermint": "./bin/tendermint"
  },
  "scripts": {
    "test": "standard index.js src/*.js test/*.js && nyc ava",
    "preinstall": "rm -f ./bin/tendermint && touch ./bin/tendermint",
    "install": "node ./bin/download.js",
    "update": "node ./bin/update.js"
  },
  "keywords": [
    "tendermint",
    "blockchain",
    "cosmos"
  ],
  "author": "Matt Bell <mappum@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "cross-spawn": "^6.0.5",
    "debug": "^3.1.0",
    "decamelize": "^2.0.0",
    "execa": "^0.10.0",
    "progress": "^2.0.0",
    "tendermint": "^3.1.3",
    "unzip": "^0.1.11"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "fs-extra": "^6.0.1",
    "nyc": "^11.7.3",
    "standard": "^11.0.1"
  }
}
